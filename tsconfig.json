{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": ["dom", "es2018"],
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "stripInternal": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["./src"],
  "compileOnSave": false
}
